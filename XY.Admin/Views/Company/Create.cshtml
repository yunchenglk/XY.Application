@{
    ViewBag.Title = "添加公司";
}
@Scripts.Render("~/js/jqueryValidate")
<script type="text/javascript" charset="gbk" src="/content/UEdit/ueditor.config.js"></script>
<script type="text/javascript" charset="gbk" src="/content/UEdit/ueditor.all.min.js"> </script>
<script type="text/javascript" charset="gbk" src="/content/UEdit/lang/zh-cn/zh-cn.js"></script>
<script src="~/Scripts/jquery.img.js"></script>
<script type="text/javascript">
    $().ready(function () {
        var ue = UE.getEditor('editor');
    })
    function beforeSubmit() {
        if (UE.getEditor('editor').hasContents()) {
            $("#Description").val(encodeURIComponent(UE.getEditor('editor').getContent()));
            UE.getEditor('editor').destroy();
        }
        return true;
    }
</script>
<div class="pageheader">
    <h2>
        <i class="fa fa-cogs"></i> 编辑公司信息
    </h2>
    <div class="breadcrumbs">
        <ol class="breadcrumb">
            <li>当前位置</li>
            <li><a href="/Role/Index">公司信息管理</a></li>
            <li class="active">编辑公司信息</li>
        </ol>
    </div>
</div>
<div class="main">
    <section class="tile color transparent-black">
        <div class="tile-body">
            <form class="form-horizontal" method="post" action="/Company/Create" id="validate">
                <input type="hidden" value="@Model.ID" name="ID" />
                <input type="hidden" value="@Model.CreateTime" name="CreateTime" />
                <input type="hidden" value="" name="Description" id="Description" />
                <div class="form-group">
                    <label for="fullname" class="col-sm-3 control-label">公司名称 *</label>
                    <div class="col-sm-9">
                        <input name="NAME" value="@Model.Name" type="text" class="form-control {required:true,messages:{required:'名称不能为空'}}" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="fullname" class="col-sm-3 control-label">公司网址</label>
                    <div class="col-sm-9">
                        <input name="URL" value="@Model.URL" type="url" class="form-control {url:true}" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="fullname" class="col-sm-3 control-label">公司邮箱 *</label>
                    <div class="col-sm-9">
                        <input name="Email" value="@Model.Email" type="email" class="form-control {required:true,email:true}" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="fullname" class="col-sm-3 control-label">邮箱密码</label>
                    <div class="col-sm-9">
                        <input name="EmailPass" value="@Model.EmailPass" type="text" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    @if (Model.Logo == "")
                    {
                        <label for="fullname" class="col-sm-3 control-label">公司Logo</label>
                    }
                    else
                    {
                        <a href="@Model.Logo_Str" target= target="_blank"><label for="fullname" class="col-sm-3 control-label">公司Logo</label></a>
                    }
                    <div class="col-sm-9">
                        <div class="input-group" id="Logo">
                            <span class="input-group-btn">
                                <span class="btn btn-primary btn-file">
                                    <i class="fa fa-upload"></i>
                                    <input type="file" name="file" filepath="/UPLOAD/NEWS/" filetype="image" for="Logo">
                                </span>
                            </span>
                            <input type="text" class="form-control" value="@Model.Logo" name="Logo">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="fullname" class="col-sm-3 control-label">公司类型</label>
                    <div class="col-sm-9">
                        <input name="Type" value="@Model.Type" type="text" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="fullname" class="col-sm-3 control-label">公司地址</label>
                    <div class="col-sm-9">
                        <input name="Address" value="@Model.Address" type="text" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="fullname" class="col-sm-3 control-label">公司传真</label>
                    <div class="col-sm-9">
                        <input name="Fax" value="@Model.Fax" type="text" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="fullname" class="col-sm-3 control-label">公司电话</label>
                    <div class="col-sm-9">
                        <input name="Tel" value="@Model.Tel" type="text" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="fullname" class="col-sm-3 control-label">公司手机</label>
                    <div class="col-sm-9">
                        <input name="Mobile" value="@Model.Mobile" type="text" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="fullname" class="col-sm-3 control-label">邮政编码</label>
                    <div class="col-sm-9">
                        <input name="Code" value="@Model.Code" type="text" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="fullname" class="col-sm-3 control-label">公司qq</label>
                    <div class="col-sm-9">
                        <input name="QQ" value="@Model.QQ" type="text" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="fullname" class="col-sm-3 control-label">公司MSN</label>
                    <div class="col-sm-9">
                        <input name="MSN" value="@Model.MSN" type="text" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    @if (Model.WatermarkPIC == "")
                    {
                        <label for="fullname" class="col-sm-3 control-label">水印地址</label>

                    }
                    else
                    {
                        <a href="@Model.WatermarkPIC_Str" target="_blank"><label for="fullname" class="col-sm-3 control-label">水印地址</label></a>
                    }
                    <div class="col-sm-9">
                        <div class="input-group" id="WatermarkPIC">
                            <span class="input-group-btn">
                                <span class="btn btn-primary btn-file">
                                    <i class="fa fa-upload"></i>
                                    <input type="file" name="file" filepath="/UPLOAD/WATER/" filetype="image" for="WatermarkPIC">
                                </span>
                            </span>
                            <input type="text" class="form-control" value="@Model.WatermarkPIC" name="WatermarkPIC">

                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="input05" class="col-sm-3 control-label">企业描述</label>
                    <div class="col-sm-9">
                        <textarea id="editor" type="text/plain" style="width:100%;">@Model.Description</textarea>
                    </div>
                </div>
                <div class="form-group form-footer">
                    <div class="col-sm-offset-4 col-sm-8">
                        <button type="submit" class="btn btn-primary">提交</button>
                        <button type="reset" class="btn btn-default">清空</button>
                    </div>
                </div>
            </form>
        </div>
    </section>
</div>
