<!DOCTYPE html>
@{
    Layout = "";
}
<html>
<head>
    <title>鑫跃国际-后台管理中心</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="UTF-8" />

    <link rel="icon" type="image/ico" href="http://tattek.com/minimal/assets/images/favicon.ico" />
    <!-- Bootstrap -->
    <link href="/Content/css/vendor/bootstrap/bootstrap.min.css" rel="stylesheet">
    <link href="http://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">
    <link rel="stylesheet" href="/Content/css/vendor/bootstrap-checkbox.css">

    <link href="/Content/css/minimal.css" rel="stylesheet">
    <script src="~/Scripts/jquery-1.8.3.js"></script>
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
    <script type="text/javascript">
        $().ready(function () {
            var msg = "@ViewBag.Msg"
            if (msg != "") {
                $(".alert").find("strong").text(msg);
                $(".alert").show();
            }
        })
    </script>
</head>
<body class="bg-1">
    <div id="wrap">
        <div class="row">
            <div id="content" class="col-md-12 full-page login">
                <div class="inside-block">
                    <img src="/content/images/logo-big.png" style="margin-top:130px;" class="logo">
                    <h1><strong>Welcome</strong> Stranger</h1>
                    <h5>后台管理登陆</h5>
                    <div class="alert alert-red" style=" display:none;">
                        <strong>账号错误!</strong> &#12288;如有疑问请联系管理员<em> tel:0359-2486667</em>.
                    </div>

                    <form id="form-signin" class="form-signin" method="post" action="/Account/Login">
                        <section>
                            <div class="input-group">
                                <input type="text" value="@ViewBag.uname" class="form-control" name="userid" placeholder="账号">
                                <div class="input-group-addon"><i class="fa fa-user"></i></div>
                            </div>
                            <div class="input-group">
                                <input type="password" class="form-control" name="userpass" placeholder="密码">
                                <div class="input-group-addon"><i class="fa fa-key"></i></div>
                            </div>
                            <div class="input-group">
                                <input type="text" class="form-control" name="verifycode" maxlength="5" placeholder="验证码">
                                <div class="input-group-addon"> <img alt="验证码" title="点击重新获取验证码" src="/Account/GetRandomCode?id='+Math.random()"
                                     onclick="this.src = '/Account/GetRandomCode?id=' + Math.random()"
                                     style="border-radius: 4px 4px 4px 4px; margin-top:0px;float:right;display: inline-block; cursor:pointer" /></div>
                            </div>
                        </section>
                        <section class="controls">
                            <div class="checkbox check-transparent">
                                <input type="checkbox" value="1" id="remember">
                                <label for="remember">记住密码</label>
                            </div>
                            @*<a href="#">忘记密码?</a>*@
                        </section>
                        <section class="log-in">
                            <button class="btn btn-greensea">&#12288;登&#12288;陆&#12288;</button>
                            @*<span>or</span>
                            <button class="btn btn-slategray">创建账户</button>*@
                        </section>
                    </form>
                </div>


            </div>
        </div>
    </div>
</body>
</html>

