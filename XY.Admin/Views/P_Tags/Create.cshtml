
@{
    ViewBag.Title = "Create";
} 
@Scripts.Render("~/js/jqueryValidate"); 
<div class="pageheader">
    <h2>
        <i class="fa fa-cogs"></i>  商品标签管理
    </h2>
    <div class="breadcrumbs">
        <ol class="breadcrumb">
            <li>当前位置</li>
            <li class="active">编辑商品标签</li>
        </ol>
    </div>
</div>
<div class="main">
    <section class="tile color transparent-black">
        <div class="tile-body">
            <form class="form-horizontal" method="post" action="/P_Tags/Create" id="validate">
                <input type="hidden" value="/P_Tags/Index/@ViewBag.ID" name="ResultURL" />
                <input type="hidden" value="@Model.ID" name="ID" id="ID" />
                <input type="hidden" value="@Model.CreateTime" name="CreateTime" />
                <input type="hidden" value="@XY.UserDateTicket.Company.ID" name="CompanyID" />
                <div class="form-group">
                    <label for="fullname" class="col-sm-3 control-label">标签名称 *</label>
                    <div class="col-sm-9">
                        <input name="TagName" id="TagName" value="@Model.TagName" type="text" placeholder="标签名称" class="form-control {required:true,messages:{required:'标签名称不能为空'}}" />
                    </div>
                </div>
                <div class="form-group form-footer">
                    <div class="col-sm-offset-4 col-sm-8">
                        <button type="submit" class="btn btn-primary">提交</button>
                        <button type="reset" class="btn btn-default">清空</button>
                    </div>
                </div>
            </form>
        </div>
    </section>
</div>

