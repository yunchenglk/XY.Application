    <![endif]-->
    <!--[if lt IE 9]>
        <script src="~/Content/js/plugins/css3-mediaqueries.js"></script>
    <![endif]-->
    <script type="text/javascript">
        $(function () {
            var setMenu = '@ViewBag.setMenu'.split('-');
            _menulist(setMenu[0] - 1);
            if (setMenu.length > 1)
                _menulist1(setMenu[0] - 1, setMenu[1] - 1);
            if (setMenu.length == 3)
                _menulist2(setMenu[2] - 1);
        })
        function _menulist(sort) {
            $(".headermenu > li ").removeClass("current");
            $(".headermenu > li:eq(" + sort + ") ").addClass("current");
            $(".iconmenu > ul").slideUp();
            $(".iconmenu > ul:eq(" + sort + ") ").slideDown();
        }
        function _menulist1(sort, int) {
            $(".iconmenu > ul:eq(" + sort + ") > li").removeClass("current");
            $(".iconmenu > ul:eq(" + sort + ") > li:eq(" + int + ")").addClass("current");
        }
        function _menulist2(int) {
            $(".iconmenu").find(".current").find("li").removeClass("current");
            $(".iconmenu").find(".current").find("li:eq(" + int + ")").addClass("current");
        }
        $(document).ajaxError(function (event, xhr, options, exc) {
            //window.location = "/Home/Error";
        })
    </script>
</head>
